<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:id="@+id/line"
    android:background="#ececec"
    android:layout_margin="1dp" android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="70"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/textViewLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Name"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewLocationAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adress" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:layout_gravity="center">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="NestedWeights">
            <ImageButton
                android:id="@+id/button_unfavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#ececec"
                android:src="@drawable/ic_favorite_border_20dp" />
            <ImageButton
                android:id="@+id/button_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#ececec"
                android:src="@drawable/ic_favorite_20dp"
                android:visibility="gone"/>

        </FrameLayout>

        <ImageButton
            android:id="@+id/button_findStreetToHere"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ececec"
            android:src="@drawable/ic_directions_24dp"/>
    </LinearLayout>

</LinearLayout>